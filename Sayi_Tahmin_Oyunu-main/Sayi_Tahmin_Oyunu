package Deneme;

import java.util.Arrays;
import java.util.Scanner;

public  class Main {



    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);


        int sayi= (int) (Math.random()*100);

        System.out.println(sayi);

        boolean tahminEdildi=false;
        int counter=0;
        while(counter<5) {                                    
            System.out.println("Tahmininizi Yap覺n覺z");
            int tahmin = scan.nextInt();
            if(tahmin < 0 || tahmin > 99)
            {
                System.out.println("Lutfen 0-99 Deger Araliginda Bir Sayi Giriniz");
                continue;
            }
            if (tahmin == sayi)
            {
                tahminEdildi = true;
                break;
            }

            else if(tahmin>sayi)
            System.out.println("Buyuk");
            else if(tahmin<sayi)
            System.out.println("Kucuk");

            counter++;
            System.out.println("Kalan Hak :"+ (5-counter));
            System.out.println(counter);

        }
        if(tahminEdildi==true)
            System.out.println("Kazand覺n覺z");
        else
            System.out.println("Kaybettiniz");
    }
}
