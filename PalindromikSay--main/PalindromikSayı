public class AlgoritmaveProgramlama {


    static boolean PalindromikSayı(int a)
    {
        int temp=a, reverseNumber=0, lastNumber;

        while( temp != 0 )
        {
            lastNumber=temp%10;
            reverseNumber=(reverseNumber*10)+lastNumber;
            temp= temp / 10;
        }

        if(a==reverseNumber)
          return true;

         else
            return false;

    }

        public static void main(String[] args) {

        PalindromikSayı(32);
        
        }
        }
